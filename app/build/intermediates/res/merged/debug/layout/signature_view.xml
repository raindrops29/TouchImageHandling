<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_ground_image"
    >
<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="고객사인"
   	android:textSize = "25sp"
   	android:layout_gravity="center"
    android:textColor="#FFFFFF"
    />
<com.pyo.image.touch.FreedomCurveDrawingView
    android:id="@+id/drawingCurveView"
    android:layout_width="280dp"
    android:layout_height="240dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    />
    
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <Button
	    	android:background="@drawable/btn_xml"
	    	android:textSize="22sp"
	    	android:textStyle="bold"
	    	android:id="@+id/btnSignatureSave"
	    	android:layout_width="fill_parent"
	    	android:layout_height="60dp"
	    	android:layout_weight="1"
	    	android:text="서명 저장"
	    	android:textColor="#FFFFFFFF"
	    	/>
    	<Button
	    	android:background="@drawable/btn_xml"
	    	android:textSize="22sp"
	    	android:textStyle="bold"
    		android:id="@+id/btnSignatureInit"
	    	android:layout_width="fill_parent"
	    	android:layout_height="60dp"
	    	android:layout_weight="1"
	    	android:text="서명 초기화"
	    	android:textColor="#FFFFFFFF"
	    	/>
	</LinearLayout>	

</LinearLayout>